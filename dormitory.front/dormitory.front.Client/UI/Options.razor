@rendermode RenderMode.InteractiveWebAssembly

    
<div class="service">
    <div class="service-icon" style="background-image: url(@IconUrl)"></div>
    <div class="service-text">
        <div class="service-title">@Title</div>
        <a class="service-button"> <span class="form-icon"></span>@Description</a>
    </div>
</div>
<style>
    .service-icon {
        background-repeat: no-repeat;
        background-size: contain;
        width: 330px;
        height: 212px;
        margin: auto 0;
    }


    .service-title {
        margin-bottom: 20px;
        font-size: 32px;
        font-weight: bold;
    }

    .service-button {
        background-color: #ffda3c;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border-radius: 20px;
        cursor: pointer;
        height: fit-content;
        font-size: 26px;
        font-weight: bold;
    }

    .service-text {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .form-icon {
        padding: 0 20px;
        background-image: url("./static/icons/form.png");
        background-repeat: no-repeat;
        background-size: contain;
        height: 10px;
        width: 10px;
    }
    .service {
        align-items: center;
        justify-content: center;
        background-color: #d4e497;       
        margin-bottom: 10px;
        padding: 20px;
        border-radius: 10px;
        display: flex;
    }
</style>

@code{
    [Parameter]
    public string Title {get; set;}
    [Parameter]
    public string Description {get;set;}
    [Parameter]
    public string IconUrl {get;set;}
}}

