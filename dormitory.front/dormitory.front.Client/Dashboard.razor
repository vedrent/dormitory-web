@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@using System.Net
@using dormitory.front.Client.UI
@using dormitory.front.Client.model
@using Blazorise
@page "/"
@page "/dashboard"
@rendermode RenderMode.InteractiveWebAssembly
@inject IAuth auth
@inject NavigationManager Navigation
@inject IAccount account;
@inject HttpClient httpClient;
<Navbar Current="@account.Current"/>
<Options options="@options"></Options>
<NewsList newsList="@NewsItems"></NewsList>
@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {

        if (!firstRender) return;

        /* check login and load user data*/

        HttpStatusCode authResultCode = await auth.Authorize();
        if (authResultCode == HttpStatusCode.OK)
        {
            Console.WriteLine("authorized");
            Console.WriteLine(JsonConvert.SerializeObject(account));
            StateHasChanged();
        }
        else
        {
            await auth.Logout();
            return;
        } 
        /* load news */
        var response = await httpClient.GetAsync("http://localhost:6981/news");
        if (response.StatusCode != HttpStatusCode.OK)
        {
            await auth.Logout();
            return;
        }

        var jsonString = await response.Content.ReadAsStringAsync();
        var rawNews = JObject.Parse(jsonString);
        Console.WriteLine(jsonString);
        NewsItems = rawNews["items"].Select(item =>
            new NewsItemModel((string)item["title"],
            (string)item["content"],
            (string)item["source"])).ToList();

        StateHasChanged();
    }

